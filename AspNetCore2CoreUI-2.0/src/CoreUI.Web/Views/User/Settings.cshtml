@model Maddalena.Core.SiteSettings

@{
    ViewData["Title"] = "Settings";
}

<h2>Settings</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Settings">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Owner" class="control-label"></label>
                <input asp-for="Owner" class="form-control" />
                <span asp-validation-for="Owner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GoogleClientId" class="control-label"></label>
                <input asp-for="GoogleClientId" class="form-control" />
                <span asp-validation-for="GoogleClientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GoogleClientSecret" class="control-label"></label>
                <input asp-for="GoogleClientSecret" class="form-control" />
                <span asp-validation-for="GoogleClientSecret" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TwitterConsumerKey" class="control-label"></label>
                <input asp-for="TwitterConsumerKey" class="form-control" />
                <span asp-validation-for="TwitterConsumerKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TwitterConsumerSecret" class="control-label"></label>
                <input asp-for="TwitterConsumerSecret" class="form-control" />
                <span asp-validation-for="TwitterConsumerSecret" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
