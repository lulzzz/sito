@model IEnumerable<Maddalena.Client.News>

@{
    ViewData["Title"] = "Index";
}

<ul class="list-unstyled"></ul>

@foreach (var item in Model)
{

    <li class="media">
        <div class="media-body">
            <h5 class="mt-0 mb-1">
                <a href="@item.Link">
                    @item.Title
                </a>
            </h5>
            @if (item.Description.Length <=500)
            {
                @Html.Raw(item.Description)
            }
        </div>
    </li>

}