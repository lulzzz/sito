@inject SignInManager<MaddalenaUser> SignInManager
@inject UserManager<MaddalenaUser> UserManager

<!-- *APP-HEADER* -->
<header class="app-header navbar">
    <button class="navbar-toggler mobile-sidebar-toggler d-lg-none mr-auto" type="button">
        <span class="navbar-toggler-icon"></span>
    </button>
    <button class="navbar-toggler sidebar-toggler d-md-down-none" type="button">
        <span class="navbar-toggler-icon"></span>
    </button>
    <ul class="nav navbar-nav d-md-down-none">
        <li class="nav-item px-3">
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="nav-item px-3">
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="MyNuget">My Nuget</a>
        </li>
        <li class="nav-item px-3">
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
        </li>
    </ul>

    <ul class="nav navbar-nav ml-auto">
      @if (SignInManager.IsSignedIn(User))
      {
          <li class="nav-item dropdown" style="margin-right:25px">
            <a class="nav-link dropdown-toggle nav-link" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
              <i class="fa fa-user"></i>
            </a>
            <div class="dropdown-menu dropdown-menu-right">

                @if (User.IsInRole("blog"))
                {
                    <a class="dropdown-item" href="/blog">
                        <i class="fa fa-sliders-h"></i>Blog
                    </a>
                }


                @if (User.IsInRole("user"))
                {
                    <a class="dropdown-item" href="/user">
                        <i class="fa fa-sliders-h"></i>User management
                    </a>
                }
                
                @if (User.IsInRole("feed"))
                {
                    <a class="dropdown-item" href="/feed">
                        <i class="fa fa-sliders-h"></i>Feed
                    </a>
                }

                <a class="dropdown-item" href="/manage/Index">
                    <i class="fa fa-sliders-h"></i>My Settings
                </a>

                <form asp-area="" asp-controller="Account" asp-action="Logout">
                    <button type="submit" class="dropdown-item" href="#"><i class="fa fa-lock"></i> Logout</button>
                </form>
            </div>
          </li>
      }
      else
      {
          <li class="nav-item px-3">
            <ul class="nav navbar-nav navbar-right">
              <li class="nav-item px-3" style="margin-right: 15px !important;">
                <a asp-area="" asp-controller="Account" asp-action="Login">Log in</a>
              </li>
            </ul>
          </li>
      }
      </ul>
</header>
<!-- /*APP-HEADER* -->
